return {
  'nvim-treesitter/nvim-treesitter',
  build = ':TSUpdate',
  config = function()
    local treesitter = require('nvim-treesitter.configs')
    treesitter.setup({
      indent = { enable = true },
      ensure_installed = {
        'html',
        'css',
        'json',
        'bash',
        'vim',
        'lua',
        'gitignore',
      },
      -- auto install above language parsers
      auto_install = true,
    })
  end,
}
